<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<android.support.v7.widget.CardView
    android:id="@+id/notification_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:elevation="4dp">
    <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                style="@style/Base.TextAppearance.AppCompat.Small"
                tools:text="28 January 2017"
                android:id="@+id/notification_card_date"
                android:padding="16dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TITLE"
                android:layout_margin="16dp"
                android:id="@+id/notification_card_title"
                style="@style/Base.TextAppearance.AppCompat.Title"/>
        <TextView
            android:id="@+id/notification_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is a sample decription. Just to fill in the white space "
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:lines="4"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/notification_card_title"
            android:maxLines="4"
            android:ellipsize="end"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>
