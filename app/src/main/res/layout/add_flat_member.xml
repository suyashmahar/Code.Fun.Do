<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_flat_vehicle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Family Member ! "
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        style="@style/Base.TextAppearance.AppCompat.Title"/>
    <ProgressBar
        android:id="@+id/add_vehicle_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/txt_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:progress="100"
        />

    <EditText
        android:id="@+id/add_member_name"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/add_vehicle_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/add_member_email"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/add_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/add_member_mobile"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/add_member_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/add_member_relation"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/add_member_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Relation with Owner"
        android:layout_marginLeft="16dp"/>
    <Button
        android:id="@+id/add_flat_member_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/add_member_relation"
        android:layout_marginTop="8dp"
        android:padding="24dp"
        android:text="add member"
        android:onClick="saveMember"/>
</RelativeLayout>