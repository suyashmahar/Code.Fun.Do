<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/complaint_card_tile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:gravity="center"
    >
    <TextView
                android:id="@+id/complaint_card_date"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                style="@style/Base.TextAppearance.AppCompat.Small"
                tools:text="28 January 2017"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content" />
            <TextView
                android:id="@+id/complaint_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="This is a title"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                style="@style/Base.TextAppearance.AppCompat.Title"/>
            <TextView
                android:id="@+id/complaint_card_sender"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/complaint_card_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="12sp"
                tools:text="by Harshit Bansal"
                style="12sp"
                />
            <TextView
                android:id="@+id/complaint_card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="akjfdh lak sfljah a dl adl adslfad fljadhfljdhflazsdb d lajhdf ljfdal ahlfd laj fl a af ladsfjhaldfh ljdsa hdljash lajdf haf dljfdlajhfljaldf haldj fhaljdf  afn,madf  adfladfla fadfl dafl adfoiwe vadl davlnbao adnvalnva "
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/complaint_card_sender"
                android:maxLines="4"
                android:ellipsize="end"/>
</RelativeLayout>


