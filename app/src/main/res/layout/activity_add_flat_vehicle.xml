<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_flat_vehicle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.example.neighbours.AddFlatVehicle">
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Vehicle ! "
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        style="@style/Base.TextAppearance.AppCompat.Title"/>
    <ProgressBar
        android:id="@+id/add_vehicle_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/txt_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:progress="100"
        />
<RadioGroup
    android:id="@+id/radiogroup"
    android:layout_below="@+id/add_vehicle_progress_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/add_vehicle_radio_2wheeler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Wheeler"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_marginRight="16dp"/>
    <RadioButton
        android:id="@+id/add_vehicle_radio_4wheeler"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Wheeler"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"/>
</RadioGroup>
    <EditText
        android:id="@+id/add_vehicle_name"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Model Name"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/add_vehicle_number"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/add_vehicle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Number"
        android:layout_marginLeft="16dp"/>
    <EditText
        android:id="@+id/add_vehicle_slot"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/add_vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parking Slot"
        android:layout_marginLeft="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/add_vehicle_slot"
        android:layout_marginTop="8dp"
        android:padding="24dp"
        android:text="add vehicle"/>
</RelativeLayout>
