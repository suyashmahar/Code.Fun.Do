<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/campaign_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/campaign_card_image"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:foreground="#3f3f3f"/>
            <TextView
                android:id="@+id/campaign_card_title"
                android:text="Campaign Title"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_toRightOf="@+id/campaign_card_image"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/campaign_card_rel_time"
                android:text="few decades ago"
                android:layout_toRightOf="@id/campaign_card_image"
                android:layout_below="@+id/campaign_card_title"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"/>
            <TextView
                android:id="@+id/campaign_card_description"
                android:text="fn kadfn dafks kjdafsl adkflkadnflj  ;akldfn lkadfn kafsndl akldfn kadfn dafks kjdafsl adkflkadnflj "
                android:lines="3"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_toRightOf="@id/campaign_card_image"
                android:layout_below="@+id/campaign_card_rel_time"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Body1"/>
            <TextView
                android:id="@+id/campaign_card_total_fund"
                android:layout_below="@id/campaign_card_description"
                android:layout_toRightOf="@id/campaign_card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100"
                android:layout_marginStart="16dp"
                android:layout_alignBaseline="@+id/campaign_card_progress_bar"
                />
            <ProgressBar
                android:id="@+id/campaign_card_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="2dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_below="@id/campaign_card_description"
                android:layout_toRightOf="@+id/campaign_card_total_fund"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:progress="100"
                />
            <ImageView
                android:id="@+id/campaign_card_overflow"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_three_dot_menu"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>