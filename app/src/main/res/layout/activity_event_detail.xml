<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.example.neighbours.CampaignDetail">
    <ImageView
        android:id="@+id/activity_event_detail_cover_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:fitsSystemWindows="true"
        android:src="@drawable/events_banner"/>
    <TextView
        android:id="@+id/event_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/activity_event_detail_cover_image"
        tools:text="Event Name"
        style="@style/Base.TextAppearance.AppCompat.Title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/event_detail_name">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <ImageView
        android:id="@+id/event_detail_heart_toggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/heart_unchecked"
        />
    <TextView
        android:id="@+id/event_detail_hearts"
        android:layout_toRightOf="@id/event_detail_heart_toggle"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#a0ff0000"
        android:text="100k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

            <ProgressBar
                android:id="@+id/event_card_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/event_detail_heart_toggle"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:progress="100"
                />
            <TextView
                android:id="@+id/event_detail_rel_time"
                tools:text="Few decades ago"
                android:layout_below="@+id/event_card_progress_bar"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"/>
            <TextView
                android:id="@+id/event_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/event_detail_rel_time"
                style="@style/Base.TextAppearance.AppCompat.Small"
                tools:text="hgaHdvbcajhdsbCNDBnVBDznxc  jZv bjB Z BJ  VjlL ZCBCXJB J j j bbbbbbbbbbbjbbbbbbbbbbbbbbbbbbbbbbbjXCBX            JCBjbbbbbbbbbvjbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
