<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/complaint_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/complaint_card_date"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                style="@style/Base.TextAppearance.AppCompat.Small"
                tools:text="t"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content" />
            <TextView
                android:id="@+id/complaint_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="t"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                style="@style/Base.TextAppearance.AppCompat.Title"/>
            <TextView
                android:id="@+id/complaint_card_sender"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/complaint_card_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                tools:text="by Harshit Bansal"
                style="12sp"
                />
            <TextView
                android:id="@+id/complaint_card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="THis is a description"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/complaint_card_sender"
                android:maxLines="4"
                android:lines="4"
                android:ellipsize="end"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
