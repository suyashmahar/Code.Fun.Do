<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/event_tile_view"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginTop="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                style="@style/Base.TextAppearance.AppCompat.Small"
                tools:text="28 January 2017"
                android:id="@+id/notification_tile_date"
                android:padding="16dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TITLE"
                android:layout_margin="16dp"
                android:id="@+id/notification_tile_title"
                style="@style/Base.TextAppearance.AppCompat.Title"/>
            <TextView
                android:id="@+id/notification_tile_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=""
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/notification_tile_title"
                android:maxLines="4"
                android:ellipsize="end"/>
        </RelativeLayout>

